<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>

<GridPane alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="zero.saiyi.jfxeventsdemo.ControllerDemo">
	<!-- TODO Add Nodes -->
	<TextField fx:id="nameField" onKeyReleased="#textFieldReleaseEvents" promptText="" GridPane.rowIndex="0" />
	<CheckBox fx:id="clearTextCheckBox" onAction="#checkBoxEvent" GridPane.rowIndex="1" text="clear name field after button clicked"></CheckBox>
	<Button fx:id="helloBtn" onAction="#onClickedEvent" text="Say Hello" GridPane.rowIndex="2" />
	<Button fx:id="byeBtn" onAction="#onClickedEvent" text="bye Button" GridPane.columnIndex="1" GridPane.rowIndex="2" />
	<Label fx:id="labelResult" text="enter the text field.." GridPane.rowIndex="3"></Label>   
</GridPane>
